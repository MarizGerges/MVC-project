@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All roles";
}
<h1>All Roles</h1>
<br />
<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New Role</a>

<div class=" row justify-content-center align-items-center mt-3 mb-5">
    <form asp-action="Index" class="col-8 offset-1 row">
        <div class="col-8">
            <input type="text" class="form-control " name="name" placeholder="Search by name" />
        </div>
        <div class=" col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u=>u.Id)</td>
                <td>@Html.DisplayNameFor(u=>u.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartiaViel" model="@role.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is no role!</h3>
    </div>
}
