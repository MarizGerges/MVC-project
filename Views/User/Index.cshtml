@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}
<h1>All Users</h1>
<br />
<br />
@*<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New User</a>*@

<div class=" row justify-content-center align-items-center mt-3 mb-5">
    <form asp-action="Index" class="col-8 offset-1 row">
        <div class="col-8">
            <input type="text" class="form-control " name="email" placeholder="Search by name" />
        </div>
        <div class=" col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u=>u.Id)</td>
                <td>@Html.DisplayNameFor(u=>u.FName)</td>
                <td>@Html.DisplayNameFor(u=>u.LName)</td>
                <td>@Html.DisplayNameFor(u=>u.Email)</td>
                <td>@Html.DisplayNameFor(u=>u.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(u=>u.Roles)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(" ", user.Roles)</td>

                    <partial name="_ButtonsPartiaViel" model="@user.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is no users!</h3>
    </div>
}
